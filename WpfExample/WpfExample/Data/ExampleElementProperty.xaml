<Window x:Class="WpfExample.Data.ExampleElementProperty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfExample.Data"
        mc:Ignorable="d"
        Title="ExampleElementProperty" Height="450" Width="800">
    <Border Margin="10" BorderBrush="Silver" BorderThickness="3" Padding="8" Height="60">
        <DockPanel>
            <TextBlock>Choose a Color:</TextBlock>
            <ComboBox x:Name="myComboBox" SelectedIndex="0">
                <ComboBoxItem>Green</ComboBoxItem>
                <ComboBoxItem>Blue</ComboBoxItem>
                <ComboBoxItem>Red</ComboBoxItem>
            </ComboBox>
            <Canvas>
                <Canvas.Background>
                    <Binding ElementName="myComboBox" Path="SelectedItem.Content"/>
                </Canvas.Background>
            </Canvas>
        </DockPanel>
    </Border>
</Window>
